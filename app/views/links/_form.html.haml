= form_for(@link) do |f|
  - if @link.errors.any?
    #error_explanation
      %h2
        = pluralize(@link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - @link.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :url, 'URL'
    %br/
    = f.text_field :url
  .field
    = f.label :color, 'Color'
    %br/
    = f.text_field :color
  .field
    = f.label :desc, 'Description'
    %br/
    = f.text_field :desc
  .actions
    = f.submit
