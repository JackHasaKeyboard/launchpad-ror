= form_for(@link) do |f|
  - if @link.errors.any?
    #error_explanation
      %h2
        = pluralize(@link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - @link.errors.full_messages.each do |message|
          %li= message
  
  #link_form
    .field
      = f.label :name
      = f.text_field :name

    .field
      = f.label :url, 'URL'
      = f.text_field :url

    .field
      = f.select :discip, ['3D Modeling', 'Animation', 'Audio', 'Business', 'Design', 'Hardware', 'Mobile', 'Photography', 'Programming', 'UI / UX', 'Web']

    .field
      = f.select :kind, ['Awards', 'Blog', 'Community', 'Inspiration', 'News', 'Resource', 'School', 'Showcase', 'Tool']

    .field#color
      = f.label :color, 'CSS Color', :placeholder => 'hex'
      = f.text_field :color

      #color_box

    .field
      = f.label :desc, 'Description', :placeholder => 'General justification of the website and how it works'
      = f.text_area :desc

    .actions
      = f.submit 'Update'
