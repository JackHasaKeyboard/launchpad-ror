%h3
  = @user.email

  = link_to "Edit settings", "/users/edit"

%hr

%h3
  Likes

  %select
    %option Likes
    %option Name (a-z)

%hr

#links
  - @likes.each do |link|
    - if link.present?
      .link
        %a{href: "//#{link.url}", target: "_blank", style: "background: #{link.color}"}
          %h3= link.name

        .info
          - if link.desc.present?
            %p= link.desc

          .stats
            %h5
              = fa_icon "link"
              = link.url

            %h5
              = fa_icon "thumbs-up"
              = link.votes_for.size

          - if link.discip.present?
            %h5
              = fa_icon "pencil"
              = link.discip

          - if link.kind.present?
            %h5
              = fa_icon "cogs"
              = link.kind

          .ctrl
            - if link.user_id = current_user.id
              = link_to "Edit", "links/#{link.slug}/edit"

%hr

%h3
  Submitted

  %select
    %option Likes
    %option Name (a-z)

#links
  - @submits.each do |link|
    .link
      %a{href: "//#{link.url}", target: "_blank", style: "background: #{link.color}"}
        %h3= link.name

      .info
        - if link.desc.present?
          %p= link.desc

        .stats
          %h5
            %a{"data-method" => "put", :href => like_link_path(link), :rel => "nofollow"}
              = fa_icon "thumbs-up"
              = link.votes_for.size

          %h5
            = fa_icon "link"
            = link.url

          - if link.discip.present?
            %h5
              = fa_icon "pencil"
              = link.discip

          - if link.kind.present?
            %h5
              = fa_icon "cogs"
              = link.kind

        .ctrl
          = link_to "Edit", "#{link.slug}/edit"
